            "Speeches": {
                "Audio/Video": [
                    {
                        name: "Farewell to Scottish High International School",
                        shortname: "farewell-shis",
                        subtext: "Delivered in 2022",
                        year: 2022,
                        externalUrl: "https://www.youtube.com/watch?v=OyDLwAbbiPo&t=65s"
                    }
                ]
            }
        };

        // ====== RENDERING FUNCTIONS ======
        function renderNavigation() {
            const nav = document.getElementById('mainNav');
            const categories = Object.keys(portfolioData);
            
            const navHTML = categories.map((cat, i) => {
                const separator = i < categories.length - 1 ? '<span class="nav-separator">|</span>' : '';
                const id = cat.toLowerCase().replace(/\s+/g, '-');
                return `<a href="#${id}">${cat}</a>${separator}`;
            }).join('');
            
            nav.innerHTML = navHTML;
        }

        function renderContent() {
            const main = document.getElementById('mainContent');
            let html = '';
            
            for (const [category, subsections] of Object.entries(portfolioData)) {
                const categoryId = category.toLowerCase().replace(/\s+/g, '-');
                html += `<section id="${categoryId}">`;
                html += `<h2 class="category-heading">${category}</h2>`;
                
                for (const [subsection, works] of Object.entries(subsections)) {
                    html += `<div class="subsection">`;
                    html += `<h3 class="subsection-title">${subsection}</h3>`;
                    html += `<ul class="work-list">`;
                    
                    works.forEach(work => {
                        html += `<li class="work-item">`;
                        
                        if (work.externalUrl) {
                            // Render a direct external link
                            html += `<a href="${work.externalUrl}" target="_blank" rel="noopener noreferrer">${work.name}</a>`;
                        } else {
                            // Render the internal onclick handler
                            // Fixed: Escaped single quotes in work.name for the onclick handler
                            html += `<a onclick="showWork('${category}', '${subsection}', '${work.name.replace(/'/g, "\\'")}')">${work.name}</a>`;
                        }
                        
                        html += `</li>`;
                    });
                    
                    html += `</ul></div>`;
                }
                
                html += `</section>`;
            }
            
            main.innerHTML = html;
        }

        function showWork(category, subsection, name) {
            const subsectionArray = portfolioData[category][subsection];
            const work = subsectionArray.find(w => w.name === name);
            if (!work) return;

            // Find current index for prev/next navigation
            const currentIndex = subsectionArray.findIndex(w => w.name === name);
            const prevWork = currentIndex > 0 ? subsectionArray[currentIndex - 1] : null;
            const nextWork = currentIndex < subsectionArray.length - 1 ? subsectionArray[currentIndex + 1] : null;
            
            let contentHTML = '';
            
            // Format content based on category
            // Fixed: Added robust checking for Array vs. String content
            if (category === 'Poems') {
                if (Array.isArray(work.content)) {
                    contentHTML = work.content.map(line => {
                        return line === '' ? '<div class="poem-line">&nbsp;</div>' : `<div class="poem-line">${line}</div>`;
                    }).join('');
                } else if (typeof work.content === 'string') {
                    // Handle prose-like content (like Black Dog) that's a single string
                    contentHTML = `<p class="poem-line">${work.content}</p>`;
                }
            } else {
                 // This is for "Prose", "Acousmatics", etc.
                if (Array.isArray(work.content)) {
                    contentHTML = work.content.map(para => `<p>${para}</p>`).join('');
                } else if (typeof work.content === 'string') {
                    contentHTML = `<p>${work.content}</p>`;
                }
            }
            
            // Date at the top (if subtext exists)
            let dateHTML = '';
            if (work.subtext) {
                dateHTML = `<div class="item-date">${work.subtext}</div>`;
            }
            
            // Metadata at the bottom
            let metadataHTML = '<div class="item-metadata-section">';
            if (work.heading) {
                metadataHTML += `<div class="item-meta">${work.heading}</div>`;
            }
            metadataHTML += `<div class="item-meta">Year: ${work.year}</div>`;
            metadataHTML += `<div class="item-meta">Category: ${category}</div>`;
            metadataHTML += `<div class="item-meta">Subsection: ${subsection}</div>`;
            if (work.shortname) {
                metadataHTML += `<div class="item-meta">ID: ${work.shortname}</div>`;
            }
            metadataHTML += '</div>';
            
            // Add footnotes if they exist
            let footnotesHTML = '';
            if (work.footnotes && work.footnotes.length > 0) {
                footnotesHTML = '<div class="footnotes"><h4>Notes</h4>';
                work.footnotes.forEach((note, i) => {
                    footnotesHTML += `<p class="footnote">${i + 1}. ${note}</p>`;
                });
                footnotesHTML += '</div>';
            }

            // Create Previous/Next Navigation HTML
            let navHTML = '<div class="item-page-nav">';
            
            // Previous Link
            if (prevWork) {
                navHTML += `<a class="back-link" onclick="showWork('${category}', '${subsection}', '${prevWork.name.replace(/'/g, "\\'")}')">← Previous</a>`;
            } else {
                navHTML += '<span class="nav-placeholder"></span>'; // Placeholder to balance flexbox
            }
            
            // Back Link
            navHTML += `<a class="back-link" onclick="hideWork()">← Back to ${category}</a>`;
            
            // Next Link
            if (nextWork) {
                navHTML += `<a class="back-link" onclick="showWork('${category}', '${subsection}', '${nextWork.name.replace(/'/g, "\\'")}')">Next →</a>`;
            } else {
                navHTML += '<span class="nav-placeholder"></span>'; // Placeholder to balance flexbox
            }
            navHTML += '</div>';

            
            const itemPageHTML = `
                <a class="back-link" onclick="hideWork()">← Back to ${category}</a>
                <div class="item-header">
                    <h1 class="item-title">${work.name}</h1>
                    ${dateHTML}
                </div>
                <div class="item-content">
                    ${contentHTML}
                </div>
                ${metadataHTML}

                ${navHTML} 
                ${footnotesHTML}
            `;
            
            document.getElementById('itemPage').innerHTML = itemPageHTML;
            document.getElementById('itemPage').classList.add('active');
            document.getElementById('mainView').classList.add('hidden');
            window.scrollTo(0, 0);
        }

        function hideWork() {
            document.getElementById('itemPage').classList.remove('active');
            document.getElementById('mainView').classList.remove('hidden');
            window.scrollTo(0, 0);
        }

        // Initialize on load
        renderNavigation();
        renderContent();
    </script>
</body>
</html>
